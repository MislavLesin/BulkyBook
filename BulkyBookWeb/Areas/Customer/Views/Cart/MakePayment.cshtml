
@model IEnumerable<OrderHeader>



<form method="post">
    <table>
        <tr>
            <th>Name</th>
            <th>Total</th>
            <th></th>
        </tr>
        @foreach (var header in Model)
        {
            <tr>
                <td>
                    @header.Name
                </td>
                <td>
                    @header.OrderTotal
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Cart" asp-action="PaymentPOST" asp-route-headerId=@header.Id>Pay Now</a>
                </td>
            </tr>
            <h1>@header.Name, @header.PaymentStatus</h1>
        }
    </table>
</form>